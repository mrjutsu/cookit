<h1>Listing names</h1>

<table>
  <thead>
    <tr>
      <th>Ingredients</th>
      <th>Type</th>
      <th>Ocassion</th>
      <th>Description</th>
      <th>Picture</th>
      <th>Video</th>
      <th>Eating qtty</th>
      <th>Prep time</th>
      <th>Country</th>
      <th>Tips</th>
      <th>Difficulty</th>
      <th>Rating</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @names.each do |name| %>
      <tr>
        <td><%= name.ingredients %></td>
        <td><%= name.type %></td>
        <td><%= name.ocassion %></td>
        <td><%= name.description %></td>
        <td><%= name.picture %></td>
        <td><%= name.video %></td>
        <td><%= name.eating_qtty %></td>
        <td><%= name.prep_time %></td>
        <td><%= name.country %></td>
        <td><%= name.tips %></td>
        <td><%= name.difficulty %></td>
        <td><%= name.rating %></td>
        <td><%= name.location %></td>
        <td><%= link_to 'Show', name %></td>
        <td><%= link_to 'Edit', edit_name_path(name) %></td>
        <td><%= link_to 'Destroy', name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

