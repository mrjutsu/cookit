<h1>Log In</h1>

<%= form_for(@user, url: sessions_path, method: :post) do |f| %>

	<div class="field">
	    <%= f.label :username %><br>
	    <%= f.text_field :username %>
	</div>
	<div class="field">
	   <%= f.label :password %><br>
	   <%= f.password_field :password %>
	</div>
	<div class="actions">
    	<%= f.submit 'Sign In' %>
  	</div>

<% end %>

<%= link_to 'Back', sessions_path %>
